generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Users table - stores user account information
model User {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username      String?  @unique @db.VarChar(50)
  email         String   @unique @db.VarChar(255)
  password_hash String?  @db.VarChar(255)
  google_id     String?  @unique @db.VarChar(100)
  share_token   String   @unique @default(dbgenerated("encode(gen_random_uuid()::text::bytea, 'hex')")) @db.VarChar(128)
  description   String?  @db.Text
  title         String?  @db.VarChar(100)
  created_at    DateTime @default(now()) @db.Timestamptz
  updated_at    DateTime @default(now()) @updatedAt @db.Timestamptz

  // Relations
  shelves Shelf[]
  items   Item[]

  @@index([username])
  @@index([email])
  @@index([google_id])
  @@map("users")
}

// Shelves table - stores user-created shelves
model Shelf {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String   @db.Uuid
  name        String   @db.VarChar(100)
  description String?  @db.Text
  share_token String   @unique @default(dbgenerated("encode(gen_random_uuid()::text::bytea, 'hex')")) @db.VarChar(128)
  is_public   Boolean  @default(false)
  created_at  DateTime @default(now()) @db.Timestamptz
  updated_at  DateTime @default(now()) @updatedAt @db.Timestamptz

  // Relations
  user  User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  items Item[]

  @@index([user_id])
  @@index([share_token])
  @@map("shelves")
}

// Item type enum
enum ItemType {
  book
  podcast
  music
}

// Items table - stores books, podcasts, and music entries
model Item {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  shelf_id     String   @db.Uuid
  user_id      String?  @db.Uuid
  type         ItemType
  title        String   @db.VarChar(255)
  creator      String   @db.VarChar(255)
  image_url    String?  @db.Text
  external_url String?  @db.Text
  notes        String?  @db.Text
  order_index  Int      @default(0)
  created_at   DateTime @default(now()) @db.Timestamptz
  updated_at   DateTime @default(now()) @updatedAt @db.Timestamptz

  // Relations
  shelf Shelf @relation(fields: [shelf_id], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([shelf_id, order_index])
  @@index([shelf_id])
  @@index([user_id])
  @@index([shelf_id, type])
  @@index([shelf_id, order_index])
  @@map("items")
}
